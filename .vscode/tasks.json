{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SCSS: build",
            "type": "shell",
            "command": "sass --no-source-map --no-unicode --no-trace --no-color src/scss/:src/css/",
            "problemMatcher": {
                "owner": "sass",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                        "regexp": "^Error: (.*)$",
                        "message": 1
                    },
                    {
                        "regexp": "^ +,$"
                    },
                    {
                        "regexp": "^.*\\| +(.*)$",
                        "code": 1
                    },
                    {
                        "regexp": "^ +\\|.*$"
                    },
                    {
                        "regexp": "^ +'$"
                    },
                    {
                        "regexp": "^ +([^ ]+) ([0-9]+):([0-9]+).*$",
                        "file": 1,
                        "line": 2,
                        "column": 3
                    }
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
